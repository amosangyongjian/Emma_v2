<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amosang.emma_v2.NewRequest">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_reqtitle"
        android:width="800px"
        android:gravity="center_horizontal"
        android:hint="Request Title"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_add"
        android:width="800px"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/btn_cancel"
        android:layout_centerHorizontal="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_cancel"
        android:width="800px"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_add"
        android:layout_alignStart="@+id/btn_add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/btn_record"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/input_reqtitle"
        android:layout_alignStart="@+id/input_reqtitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Rec"
        android:id="@+id/btn_stop"
        android:layout_above="@+id/btn_play"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btn_play"
        android:layout_below="@+id/btn_record"
        android:layout_alignLeft="@+id/btn_record"
        android:layout_alignStart="@+id/btn_record" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btn_clear"
        android:layout_above="@+id/btn_stopPlay"
        android:layout_alignLeft="@+id/btn_stopPlay"
        android:layout_alignStart="@+id/btn_stopPlay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btn_stopPlay"
        android:layout_below="@+id/btn_stop"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text_audiofile"
        android:layout_above="@+id/btn_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

</RelativeLayout>
