<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amosang.emma_v2.NewUser">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_welcome"
        android:text="@string/text_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_instructions"
        android:text="@string/text_instruction"
        android:layout_marginTop="62dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/text_welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_username"
        android:width="800px"
        android:gravity="center_horizontal"
        android:layout_above="@+id/btn_go"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="124dp"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_go"
        android:text="@string/btn_go"
        android:width="800px"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/input_username"
        android:layout_alignStart="@+id/input_username"
        android:layout_marginBottom="26dp" />
</RelativeLayout>
